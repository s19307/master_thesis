<?xml version="1.0"?>
<odoo>
    <data>

        <record id="hr_applicant_inherited_view_form" model="ir.ui.view">
            <field name="name">Jobs - Recruitment Form Test</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type_id']" position="after">
                  <field name="cv_file"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>